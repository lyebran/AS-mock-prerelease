name = input("Enter Name: ")
origin = input("Enter origin: ")
description = input("Enter description for the monster: ")
while True:
    attack = int(input("Enter Attack stat from range 0-30: "))
    if attack < 0:
        print("Invalid, must be between 0 and 30.")
    elif attack > 30:
        print("Invalid, must be between 0 and 30.")
    else:
        break



while True:
    magicalforce = int(input("Enter Magical Force stat from range 0-30: "))
    if magicalforce < 0:
        print("Invalid, must be between 0 and 30.")
    elif magicalforce > 30:
        print("Invalid, must be between 0 and 30.")
    else:
        break



while True:
    magicaldefence = int(input("Enter Magical Defence stat from range 0-30: "))
    if magicaldefence < 0:
        print("Invalid, must be between 0 and 30.")
    elif magicaldefence > 30:
        print("Invalid, must be between 0 and 30.")
    else:
        break



while True:
    defence = int(input("Enter Defence stat from range 0-30: "))
    if defence < 0:
        print("Invalid, must be between 0 and 30.")
    elif defence > 30:
        print("Invalid, must be between 0 and 30.")
    else:
        break



while True:
    intelligence = int(input("Enter Intelligence stat from range 0-30: "))
    if intelligence < 0:
        print("Invalid, must be between 0 and 30.")
    elif intelligence > 30:
        print("Invalid, must be between 0 and 30.")
    else:
        break



while True:
    health = int(input("Enter Health stat from range 0-30: "))
    if health < 0:
        print("Invalid, must be between 0 and 30.")
    elif health > 30:
        print("Invalid, must be between 0 and 30.")
    else:
        break



while True:
    experience = int(input("Enter Experience stat from range 0-30: "))
    if experience < 0:
        print("Invalid, must be between 0 and 30.")
    elif experience > 30:
        print("Invalid, must be between 0 and 30.")
    else:
        break

print("Name: " + name)
print("Origin: " + origin)
print("Description: " + description)
print("Attack: " + str(attack))
print("Magical Force: " + str(magicalforce))
print("Magical Defence: " + str(magicaldefence))
print("Defence: " + str(defence))
print("Intelligence: " + str(intelligence))
print("Health: " + str(health))
print("Experience: " + str(experience))


